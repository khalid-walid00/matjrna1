<main class="transition-all duration-300" :class="scrolled ? 'pt-24' : 'pt-36'">
    <div class="container py-8">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-8 font-cairo">اقسام المتجر</h1>

        <!-- Filter Bar (UI only) -->
        <div class="mb-8 p-4 bg-white rounded-lg shadow-sm" x-data="{ inStock:false, open:null, mobileOpen:null }" @keydown.escape.window="open=null; mobileOpen=null">
            <!-- Desktop Filters (Large screens only) -->
            <div class="hidden lg:flex flex-row items-center justify-between gap-4" @click.outside="open=null">
                <div class="flex items-center gap-6">
                    <div class="flex items-center gap-2 cursor-pointer select-none" @click="inStock=!inStock">
                        <label class="font-semibold text-gray-700 text-base">في المخزون فقط</label>
                        <div class="rounded-full w-10 h-6 p-1 flex items-center transition-all duration-200" :class="inStock ? 'bg-blue-600 justify-start' : 'bg-gray-300 justify-end'">
                            <div class="bg-white w-4 h-4 rounded-full shadow-md"></div>
                        </div>
                    </div>
                    <div class="relative">
                        <button class="flex items-center gap-1 text-gray-700 hover:text-black font-semibold text-base px-3 py-2 rounded-lg hover:bg-gray-50 transition-all duration-200" @click="open = open==='price' ? null : 'price'">سعر
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        <div x-show="open==='price'" x-transition class="absolute z-10 mt-2 w-56 bg-white rounded-md shadow-lg p-4 border">
                            <input type="range" class="w-full">
                            <div class="flex justify-between text-xs text-gray-600 mt-1"><span>0</span><span>400</span></div>
                        </div>
                    </div>
                    <div class="relative">
                        <button class="flex items-center gap-1 text-gray-700 hover:text-black font-semibold text-base px-3 py-2 rounded-lg hover:bg-gray-50 transition-all duration-200" @click="open = open==='brand' ? null : 'brand'">ماركة
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        <div x-show="open==='brand'" x-transition class="absolute z-10 mt-2 w-48 bg-white rounded-md shadow-lg p-2 border">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">Matjrna</a>
                        </div>
                    </div>
                    <div class="relative">
                        <button class="flex items-center gap-1 text-gray-700 hover:text-black font-semibold text-base px-3 py-2 rounded-lg hover:bg-gray-50 transition-all duration-200" @click="open = open==='color' ? null : 'color'">لون
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        <div x-show="open==='color'" x-transition class="absolute z-10 mt-2 w-48 bg-white rounded-md shadow-lg p-2 border">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">أحمر</a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">أخضر</a>
                        </div>
                    </div>
                    <div class="relative">
                        <button class="flex items-center gap-1 text-gray-700 hover:text-black font-semibold text-base px-3 py-2 rounded-lg hover:bg-gray-50 transition-all duration-200" @click="open = open==='type' ? null : 'type'">نوع المنتج
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        <div x-show="open==='type'" x-transition class="absolute z-10 mt-2 w-56 bg-white rounded-md shadow-lg p-4 border">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">حافظات الايفون</a>
                        </div>
                    </div>
                </div>
                <div class="relative">
                    <button class="flex items-center gap-2 whitespace-nowrap px-3 py-2 rounded-lg hover:bg-gray-50 transition-all duration-200" @click="open = open==='sort' ? null : 'sort'">
                        <span class="text-gray-600 font-semibold text-sm">الترتيب حسب:</span>
                        <span class="text-gray-800 font-bold text-base">أبجديا، من الألف إلى الياء</span>
                        <svg class="w-4 h-4 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                    </button>
                    <div x-show="open==='sort'" x-transition class="absolute z-10 left-0 mt-2 w-56 bg-white rounded-md shadow-lg p-2 border">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">متميز</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">السعر: من الأعلى للأقل</a>
                    </div>
                </div>
            </div>

            <!-- Tablet Filters (Medium screens) -->
            <div class="hidden md:block lg:hidden">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-lg font-semibold text-gray-800">فلتر</span>
                    <button class="flex items-center gap-2 text-gray-600 hover:text-gray-800 transition-colors duration-200 px-4 py-2 rounded-lg hover:bg-gray-50" @click="open = open==='tablet' ? null : 'tablet'">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"/>
                        </svg>
                        <span class="font-medium">عرض الفلاتر</span>
                    </button>
                </div>
                <div x-show="open==='tablet'" x-transition class="border rounded-lg p-4 bg-gray-50">
                    <div class="flex flex-wrap items-center gap-3 mb-4">
                        <div class="flex items-center gap-2 cursor-pointer select-none" @click="inStock=!inStock">
                            <label class="font-semibold text-gray-700 text-sm">في المخزون فقط</label>
                            <div class="rounded-full w-10 h-6 p-1 flex items-center transition-all duration-200" :class="inStock ? 'bg-blue-600 justify-start' : 'bg-gray-300 justify-end'">
                                <div class="bg-white w-4 h-4 rounded-full shadow-md"></div>
                            </div>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-3">
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-white transition-colors duration-200" @click="open = open==='tablet-price' ? null : 'tablet-price'">سعر</button>
                            <div x-show="open==='tablet-price'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-3 border min-w-[200px]">
                                <input type="range" class="w-full">
                                <div class="flex justify-between text-xs text-gray-600 mt-1"><span>0</span><span>400</span></div>
                            </div>
                        </div>
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-white transition-colors duration-200" @click="open = open==='tablet-brand' ? null : 'tablet-brand'">ماركة</button>
                            <div x-show="open==='tablet-brand'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-2 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">Matjrna</a>
                            </div>
                        </div>
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-white transition-colors duration-200" @click="open = open==='tablet-color' ? null : 'tablet-color'">لون</button>
                            <div x-show="open==='tablet-color'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-2 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">أحمر</a>
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">أخضر</a>
                            </div>
                        </div>
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-white transition-colors duration-200" @click="open = open==='tablet-type' ? null : 'tablet-type'">نوع المنتج</button>
                            <div x-show="open==='tablet-type'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-4 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">حافظات الايفون</a>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <div class="relative">
                            <button class="flex items-center gap-2 whitespace-nowrap px-3 py-2 rounded-lg hover:bg-white transition-all duration-200" @click="open = open==='tablet-sort' ? null : 'tablet-sort'">
                                <span class="text-gray-600 font-semibold text-sm">الترتيب حسب:</span>
                                <span class="text-gray-800 font-bold text-sm">أبجديا، من الألف إلى الياء</span>
                                <svg class="w-4 h-4 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                            </button>
                            <div x-show="open==='tablet-sort'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-2 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">متميز</a>
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">السعر: من الأعلى للأقل</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="md:hidden">
                <div class="flex items-center justify-between">
                    <span class="text-lg font-semibold text-gray-800">فلتر</span>
                    <button class="flex items-center gap-2 text-gray-600 hover:text-gray-800 transition-colors duration-200" @click="open = open==='mobile' ? null : 'mobile'">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"/>
                        </svg>
                    </button>
                </div>
                <div x-show="open==='mobile'" x-transition class="mt-3 border rounded-lg p-3">
                    <div class="flex items-center justify-between py-2">
                        <span class="font-semibold text-gray-700">في المخزون فقط</span>
                        <div class="rounded-full w-10 h-6 p-1 flex items-center transition-all duration-200" :class="inStock ? 'bg-blue-600 justify-start' : 'bg-gray-300 justify-end'" @click="inStock = !inStock">
                            <div class="bg-white w-4 h-4 rounded-full shadow-md"></div>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-2 mt-2">
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" @click="mobileOpen = mobileOpen==='price' ? null : 'price'">سعر</button>
                            <div x-show="mobileOpen==='price'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-3 border min-w-[200px]">
                                <input type="range" class="w-full">
                                <div class="flex justify-between text-xs text-gray-600 mt-1"><span>0</span><span>400</span></div>
                            </div>
                        </div>
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" @click="mobileOpen = mobileOpen==='brand' ? null : 'brand'">ماركة</button>
                            <div x-show="mobileOpen==='brand'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-2 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">Matjrna</a>
                            </div>
                        </div>
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" @click="mobileOpen = mobileOpen==='color' ? null : 'color'">لون</button>
                            <div x-show="mobileOpen==='color'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-2 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">أحمر</a>
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">أخضر</a>
                            </div>
                        </div>
                        <div class="relative">
                            <button class="w-full border rounded-md py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" @click="mobileOpen = mobileOpen==='type' ? null : 'type'">نوع المنتج</button>
                            <div x-show="mobileOpen==='type'" x-transition class="absolute z-20 bottom-full mb-2 left-0 w-full bg-white rounded-md shadow-lg p-2 border min-w-[200px]">
                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md">حافظات الايفون</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for collection in context.collections %}
            <div
                class="bg-white rounded-lg shadow-sm hover:shadow-md border border-gray-200 hover:border-gray-300 overflow-hidden transition-all duration-300 group transform hover:-translate-y-1">
                <a href="collection/{{ collection.slug }}" class="block relative">
                    <img src={{collection.image.fileUrl}} alt="Product 1"
                        class="w-full h-auto aspect-square object-cover transition-opacity duration-300">
                </a>
                <h3
                    class="font-semibold text-gray-900 text-sm md:text-base font-cairo leading-tight min-h-[3rem] flex items-center justify-center">
                    <a href="collection/{{ collection.slug }}" class="hover:text-gray-700 transition-colors duration-200">{{ collection.title }}</a>
                </h3>
            </div>
            {% endfor %}
        </div>



        <!-- قائمة المنتجات الإضافية (مخفية افتراضياً) -->
        <div class="mt-12" x-data="{ showMore: false }" @show-more-products.window="showMore = !showMore">
            <div x-show="showMore" x-transition class="bg-white rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center font-cairo">تصنيفات إضافية</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- الإلكترونيات -->
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 border-b border-gray-200 pb-2">الإلكترونيات</h3>
                        <div class="space-y-2">
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الهواتف الذكية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الحواسيب المحمولة</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الأجهزة اللوحية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الساعات الذكية</div>
                        </div>
                    </div>

                    <!-- الملابس -->
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 border-b border-gray-200 pb-2">الملابس</h3>
                        <div class="space-y-2">
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">ملابس الرجال</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">ملابس النساء</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">ملابس الأطفال</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الأحذية</div>
                        </div>
                    </div>

                    <!-- المنزل والحديقة -->
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 border-b border-gray-200 pb-2">المنزل والحديقة</h3>
                        <div class="space-y-2">
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الأثاث</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الإضاءة</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الديكورات</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">أدوات المطبخ</div>
                        </div>
                    </div>

                    <!-- الرياضة -->
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 border-b border-gray-200 pb-2">الرياضة</h3>
                        <div class="space-y-2">
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">ملابس رياضية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">أدوات رياضية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">معدات اللياقة</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">أحذية رياضية</div>
                        </div>
                    </div>

                    <!-- الجمال والعناية -->
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 border-b border-gray-200 pb-2">الجمال والعناية</h3>
                        <div class="space-y-2">
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">مستحضرات التجميل</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">العناية بالبشرة</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">العناية بالشعر</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">العطور</div>
                        </div>
                    </div>

                    <!-- الكتب والتعليم -->
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 border-b border-gray-200 pb-2">الكتب والتعليم</h3>
                        <div class="space-y-2">
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الكتب العربية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">الكتب الإنجليزية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">أدوات مكتبية</div>
                            <div class="text-sm text-gray-600 hover:text-blue-600 cursor-pointer transition-colors duration-200">ألعاب تعليمية</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>