<section class="py-16 bg-gradient-to-b from-white to-gray-50">
  <div class="container mx-auto">
    {% if widget.data.products | length > 0 %}
    <div class="flex flex-col gap-8">
      <!-- Section Header -->
      <div class="text-center mb-8">
        <h2 class="text-4xl font-bold text-gray-900 mb-4 font-['Cairo',sans-serif]">منتجاتنا المميزة</h2>
        <p class="text-xl text-gray-600 font-['Cairo',sans-serif]">اكتشف تشكيلة واسعة من المنتجات عالية الجودة</p>
      </div>
      
      <!-- Products Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
        {% for product in widget.data.products %}
        {%ui "product-card.njk" ,product=product ,showModal=true%}
        {% endfor %}
      </div>
      
      <!-- View More Button -->
      <div class="text-center mt-8">
        <a href="/collections" class="inline-flex items-center gap-3 bg-gradient-to-r from-gray-800 to-gray-900 hover:from-gray-900 hover:to-black text-white font-bold py-4 px-8 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 font-['Cairo',sans-serif] border border-gray-700">
          <span>عرض المزيد من المنتجات</span>
          <i class="fi fi-rr-angle-double-small-left text-xl"></i>
        </a>
      </div>
    </div>
    {% else %}
    {%ui "empty.njk" %}
    {% endif %}
  </div>
</section>

