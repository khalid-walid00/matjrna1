<!-- ############### START: PROFESSIONAL CART SIDE-PANEL ############### -->
<div x-cloak x-data="xDataCart()" :class="modal.open && modal.type==='cart' ? 'fixed inset-0 z-50' : 'hidden'">
    <!-- Overlay -->
    <div @click="toggleModal('cart')" x-show="modal.open && modal.type === 'cart'"
        class="absolute inset-0 bg-black bg-opacity-50">
    </div>

    <!-- Panel (from Left) — move only -->
    <div x-show="modal.open && modal.type === 'cart'"
        class="absolute top-0 left-0 md:p-5 p-3 w-full max-w-md h-screen flex flex-col"
        x-transition:enter="transform-gpu transition-transform duration-300 ease-out"
        x-transition:enter-start="-translate-x-full" x-transition:enter-end="translate-x-0"
        x-transition:leave="transform-gpu transition-transform duration-200 ease-in"
        x-transition:leave-start="translate-x-0" x-transition:leave-end="-translate-x-full">
        <div class="bg-white h-full rounded-xl">
            <div x-show="globals?.cart?.items && globals?.cart?.items.length > 0 && !globalLoading.cart"
                class="flex flex-col h-full">
                <div class="flex justify-between items-center p-6 border-b border-gray-100 flex-shrink-0">
                    <h2 class="text-2xl font-bold text-gray-800 font-['Cairo']">
                        سلة مشترياتك (<span x-text="globals?.cart?.items?.length || 0" class="text-blue-600"></span>)
                    </h2>
                    <button @click="toggleModal('cart')"
                        class="text-gray-600 hover:text-gray-800 p-2 hover:bg-gray-100 rounded-full transition-colors duration-200">
                        <svg class="h-6 w-6" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <!-- Product List (with skeleton per item) -->
                <div class="p-6 overflow-y-auto flex flex-1 flex-col gap-6">
                    <template x-for="item in globals?.cart?.items" :key="item?._id">
                        <div class="relative">
                            <!-- SKELETON لما العنصر مشغول -->
                            <template x-if="inbusy(item._id)">
                                <div class="flex items-start gap-4 h-[90px]">
                                    <div class="w-20 h-20 bg-gray-200 rounded-md"></div>
                                    <div class="flex-grow flex flex-col gap-1">
                                        <div class="h-5 bg-gray-200 rounded w-3/4"></div>
                                        <div class="flex justify-between items-center">
                                            <div class="h-6 bg-gray-200 rounded w-24"></div>
                                            <div class="flex-1 flex justify-end">
                                                <div class="flex w-max items-center gap-2 rounded-md">
                                                    <div class="w-9 h-9 bg-gray-200 rounded-md"></div>
                                                    <div class="w-9 h-9 bg-gray-200 rounded -md"></div>
                                                    <div class="w-9 h-9 bg-gray-200 rounded-md"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="h-4 bg-gray-200 rounded w-16"></div>
                                    </div>
                                </div>
                            </template>

                            <!-- المحتوى الحقيقي لما مش مشغول -->
                            <template x-if="!inbusy(item._id)">
                                <div
                                    class="  flex items-start gap-4 p-1 bg-white rounded-xl border border-gray-200 hover:border-gray-300 transition-all duration-300">
                                    <a href="#" class="flex-shrink-0">
                                        <img :src="item?.productData?.image?.fileUrl" alt="Power Bank"
                                            class="w-20 h-20 rounded-lg object-cover border border-gray-200 hover:border-gray-300 transition-colors duration-200">
                                    </a>

                                    <div class="flex-grow flex items-start flex-col gap-1">
                                        <a :href="item?.productData?.slug" x-text="item?.productData?.title"
                                            class="font-bold text-gray-900 hover:text-gray-700 transition-colors text-sm duration-200 font-['Cairo']"></a>

                                        <template x-if="item?.variantData?.options?.length > 0">
                                            <div class="flex flex-wrap gap-2">
                                                <template x-for="opt in item?.variantData?.options" :key="opt?._id">
                                                    <span
                                                        class="inline-flex items-center px-2 py-1 bg-blue-50 text-blue-700 rounded-md text-xs font-medium font-['Cairo']">
                                                        <span x-text="opt?.option?.name"></span> :
                                                        <span class="font-bold" x-text="opt?.label"></span>
                                                    </span>
                                                </template>
                                            </div>
                                        </template>

                                        <div class="flex justify-between w-full items-center">
                                            <div x-show="item.totalPrice > 0" class="flex items-center gap-1">
                                                <p x-text="item.totalPrice"
                                                    class="font-bold text-lg text-blue-600 font-['Cairo']"></p>
                                                <span class="text-sm text-blue-600 font-['Cairo']"
                                                    x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                            </div>

                                            <div class="flex-1 flex justify-end">
                                                <div class="flex w-max items-center border border-gray-300 rounded-lg">
                                                    <button @click="decreaseCartItem(item._id, item.quantity)"
                                                        aria-label="تقليل الكمية"
                                                        class="w-8 h-8 flex items-center justify-center">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                            width="16" height="16">
                                                            <rect y="11" width="24" height="2" />
                                                        </svg>
                                                    </button>

                                                    <span class="px-3 py-1 font-medium text-gray-700 font-['Cairo']"
                                                        x-text="item.quantity"></span>

                                                    <button @click="increaseCartItem(item._id, item.quantity)"
                                                        aria-label="زيادة الكمية"
                                                        class="w-8 h-8 flex items-center justify-center">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                            width="16" height="16">
                                                            <g id="_01_align_center" data-name="01 align center">
                                                                <polygon
                                                                    points="24 11 13 11 13 0 11 0 11 11 0 11 0 13 11 13 11 24 13 24 13 13 24 13 24 11" />
                                                            </g>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <button aria-label="حذف المنتج" @click="clearCartItem(item._id)"
                                            class="text-sm text-red-500 hover:text-red-700 hover:underline font-['Cairo']">إزالة</button>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </template>
                </div>

                <!-- Panel Footer -->
                <div class="p-6 rounded-xl flex h-max flex-col gap-6 border-t border-gray-100 bg-gray-50">
                    <div class="flex justify-between items-center">
                        <span class="text-xl font-bold text-gray-800 font-['Cairo']">المجموع</span>
                        <div class="flex items-center gap-2">
                            <span class="text-2xl font-bold text-gray-900 font-['Cairo']"
                                x-text="globals?.cart?.totalPrice"></span>
                            <span class="text-2xl font-bold text-gray-900 font-['Cairo']"
                                x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <button :disabled="globalLoading.checkout" aria-label="اتمام الطلب" @click="checkout()"
                            class="block w-full text-center bg-black hover:bg-gray-800 text-white min-h-14 flex-1 py-4 rounded-xl font-bold transition-all duration-300 font-['Cairo']">
                            <span x-show="!globalLoading.checkout">إتمام الطلب</span>
                            <template x-if="globalLoading.checkout">
                                <div class="flex justify-center">
                                    {%ui "loading.njk" %}
                                </div>
                            </template>
                        </button>
                        <a aria-label="عرض السلة" href="/cart"
                            class="flex items-center justify-center border border-gray-300 text-gray-700 min-h-14 w-16 py-4 rounded-xl font-bold group hover:border-gray-400 hover:bg-gray-50 transition-all duration-300 font-['Cairo']">
                            <i class="fi text-lg fi-ts-cart-minus group-hover:text-gray-800"></i>
                        </a>
                    </div>
                </div>
            </div>

            <template x-if="(!globals?.cart?.items || globals?.cart?.items.length === 0) && !globalLoading.cart">
                <div class="flex flex-col h-full">
                    <!-- Header for empty cart -->
                    <div class="flex justify-between items-center p-6 border-b border-gray-100">
                        <h2 class="text-2xl font-bold text-gray-800 font-['Cairo']">سلة المشتريات</h2>
                        <button @click="toggleModal('cart')"
                            class="text-gray-600 hover:text-gray-800 p-2 hover:bg-gray-100 rounded-full transition-colors duration-200">
                            <svg class="h-6 w-6" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Empty Cart Content -->
                    <div class="flex-1 flex items-center justify-center ">
                        {%ui "empty.njk" , BtnText="تصفح اقسام المنتجات",BtnUrl="/collections"%}
                    </div>
                </div>
            </template>
        </div>
    </div>
</div>
<!-- ############### END: PROFESSIONAL CART SIDE-PANEL ############### -->