<!-- ############### START: PROFESSIONAL CART SIDE-PANEL ############### -->
<div x-cloak x-data="xDataCart()" :class="modal.open && modal.type==='cart' ? 'fixed inset-0 z-50' : 'hidden'">
    <!-- Overlay -->
    <div @click="toggleModal('cart')" x-show="modal.open && modal.type === 'cart'"
        class="absolute inset-0 bg-black bg-opacity-50">
    </div>

    <!-- Panel (from Left) — move only -->
    <div x-show="modal.open && modal.type === 'cart'"
        class="absolute top-0 left-0 md:p-5 p-3 w-full max-w-md h-screen flex flex-col"
        x-transition:enter="transform-gpu transition-transform duration-300 ease-out"
        x-transition:enter-start="-translate-x-full" x-transition:enter-end="translate-x-0"
        x-transition:leave="transform-gpu transition-transform duration-200 ease-in"
        x-transition:leave-start="translate-x-0" x-transition:leave-end="-translate-x-full">
        <div class="bg-white flex-1 rounded-xl">
            <div x-show="globals?.cart?.items && globals?.cart?.items.length > 0 && !globalLoading.cart"
                class="flex flex-col h-full">
                <div class="flex justify-between items-center p-4 border-b flex-shrink-0">
                    <h2 class="text-xl font-bold text-gray-800">
                        سلة مشترياتك (<span x-text="globals?.cart?.items?.length || 0"></span>)
                    </h2>
                    <button @click="toggleModal('cart')" class="text-gray-600 hover:text-gray-800">
                        <svg class="h-6 w-6" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <!-- Product List (with skeleton per item) -->
                <div class="p-4 overflow-y-auto flex flex-1 flex-col gap-4">
                    <template x-for="item in globals?.cart?.items" :key="item?._id">
                        <div class="relative">
                            <!-- SKELETON لما العنصر مشغول -->
                            <template x-if="inbusy(item._id)">
                                <div class="flex items-start gap-4 h-[90px]">
                                  <div class="w-20 h-20 bg-gray-200 rounded-md"></div>
                                  <div class="flex-grow flex flex-col gap-1">
                                    <div class="h-5 bg-gray-200 rounded w-3/4"></div>
                                    <div class="flex justify-between items-center">
                                      <div class="h-6 bg-gray-200 rounded w-24"></div>
                                      <div class="flex-1 flex justify-end">
                                        <div class="flex w-max items-center gap-2 rounded-md">
                                          <div class="w-9 h-9 bg-gray-200 rounded-md"></div>
                                          <div class="w-9 h-9 bg-gray-200 rounded -md"></div>
                                          <div class="w-9 h-9 bg-gray-200 rounded-md"></div>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-16"></div>
                                  </div>
                                </div>
                              </template>
  
                            <!-- المحتوى الحقيقي لما مش مشغول -->
                            <template x-if="!inbusy(item._id)">
                                <div class="flex items-start gap-4 h-[90px]">
                                    <a href="#" class="flex-shrink-0">
                                        <img :src="item?.productData?.image?.fileUrl" alt="Power Bank"
                                            class="w-20 h-20 rounded-md object-cover border">
                                    </a>
  
                                    <div class="flex-grow flex flex-col gap-1">
                                        <a :href="item?.productData?.slug" x-text="item?.productData?.title"
                                            class="font-semibold text-gray-800 hover:underline"></a>
  
                                        <template x-if="item?.variantData?.options?.length > 0">
                                            <div class="flex flex-wrap gap-1">
                                                <template x-for="opt in item?.variantData?.options" :key="opt?._id">
                                                    <span class="text-xs text-black p-1">
                                                        <span x-text="opt?.option?.name"></span> :
                                                        <span class="text-sm text-gray-500" x-text="opt?.label"></span>
                                                    </span>
                                                </template>
                                            </div>
                                        </template>
  
                                        <div class="flex justify-between items-center">
                                            <div x-show="item.totalPrice > 0" class="flex items-center gap-1">
                                                <p x-text="item.totalPrice" class="font-bold text-lg text-gray-900"></p>
                                                <span class="text-sm" x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                            </div>
  
                                            <div class="flex-1 flex justify-end">
                                                <div class="flex w-max items-center border rounded-md">
                                                    <button @click="decreaseCartItem(item._id, item.quantity)"
                                                            aria-label="تقليل الكمية"
                                                            class="w-9 h-9 flex items-center justify-center">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16">
                                                            <rect y="11" width="24" height="2" />
                                                        </svg>
                                                    </button>
  
                                                    <span class="px-3 py-1 font-medium" x-text="item.quantity"></span>
  
                                                    <button @click="increaseCartItem(item._id, item.quantity)"
                                                            aria-label="زيادة الكمية"
                                                            class="w-9 h-9 flex items-center justify-center">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16">
                                                            <g id="_01_align_center" data-name="01 align center">
                                                                <polygon points="24 11 13 11 13 0 11 0 11 11 0 11 0 13 11 13 11 24 13 24 13 13 24 13 24 11"/>
                                                            </g>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
  
                                        <button aria-label="حذف المنتج" @click="clearCartItem(item._id)"
                                                class="text-sm flex align-self-start text-red-500 hover:underline">إزالة</button>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </template>
                </div>

                <!-- Panel Footer -->
                <div class="p-4 flex h-max flex-col gap-4 border-t rounded-xl bg-gray-50">
                    <div class="flex justify-between items-center">
                        <span class="text-lg font-semibold text-gray-800">المجموع</span>
                        <div class="flex items-center gap-1">
                            <span class="text-xl font-bold text-gray-900" x-text="globals?.cart?.totalPrice"></span>
                            <span class="text-xl font-bold text-gray-900"
                                x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                        </div>
                    </div>
                    <div class="flex items-center gap-2">
                        <button :disabled="globalLoading.checkout" aria-label="اتمام الطلب" @click="checkout()"
                            class="block w-full text-center bg-black text-white min-h-14 flex-1 py-3 rounded-md font-bold hover:bg-gray-800 transition">
                            <span x-show="!globalLoading.checkout">إتمام الطلب</span>
                            <template x-if="globalLoading.checkout">
                                <div class="flex justify-center">
                                    {%ui "loading.njk" %}
                                </div>
                            </template>
                        </button>
                        <a aria-label="عرض السلة" href="/cart"
                            class="flex items-center justify-center border border-black text-black min-h-14 w-14 py-3 rounded-md font-bold group hover:bg-gray-800 transition">
                            <i class="fi text-lg fi-ts-cart-minus group-hover:text-white"></i>
                        </a>
                    </div>
                </div>
            </div>

            <template x-if="(!globals?.cart?.items || globals?.cart?.items.length === 0) && !globalLoading.cart">
                <div class="flex-col h-full flex items-center justify-center">
                    <div class="flex flex-col items-center justify-center text-center">
                        <div class="mb-4">
                            <svg class="h-16 w-16 text-gray-400 mx-auto" fill="none" viewBox="0 0 24 24"
                                stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.658-.463 1.243-1.12 1.243H4.521c-.657 0-1.19-.585-1.12-1.243l1.263-12a1.125 1.125 0 011.12-1.007h8.25a1.125 1.125 0 011.12 1.007z" />
                            </svg>
                        </div>
                        <div class="text-2xl font-bold mb-2">سلة مشترياتك فارغة</div>
                        <p class="text-gray-500 mb-6">تبدو سلتك فارغة. ابدأ بإضافة بعض المنتجات!</p>
                        <a href="/latest" aria-label="متابعة التسوق" @click="cartOpen = false"
                            class="w-full max-w-xs mt-auto px-8 py-3 border-2 border-[#003033] text-[#003033] rounded-full font-bold hover:bg-[#003033] hover:text-white transition">
                            متابعة التسوق
                        </a>
                    </div>
                </div>
            </template>
        </div>
    </div>
</div>
<!-- ############### END: PROFESSIONAL CART SIDE-PANEL ############### -->